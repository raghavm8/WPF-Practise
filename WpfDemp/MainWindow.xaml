<Window x:Class="WpfDemp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="GiveAnyColor" Color="Orange" />
            <SolidColorBrush x:Key="GiveColor" Color="GreenYellow" />
        </Grid.Resources>
        
        <Button Content="Push" FontWeight="Bold" Width="100" Height="150" Background="{StaticResource GiveColor}" BorderBrush="{StaticResource GiveAnyColor}" />
        <Button Content="Push" FontWeight="Bold" Width="100" Height="150"  Margin="490,134,191,135" Background="{StaticResource GiveAnyColor}" BorderBrush="{StaticResource GiveColor}"  />
    </Grid>
</Window>
